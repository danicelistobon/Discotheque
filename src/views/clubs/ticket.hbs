<header>
    <div class="logoc">
        <a href="/clubs" style="display: block; height: 100%"></a>
    </div>
    <h1>Discotheque</h1>
    <div class="profile">
        <a href=# style="display: block; height: 80px; width: 80px"></a>
        <div class="popover">
            <ul>
                {{#if user}}
                <li><a href="/user">Your profile</a></li>
                <li class="borde"><a href="/clubs/add">Create a club</a></li>
                <li><a href="/signout">Sign out</a></li>
                {{else}}
                <li><a href="/signin">Sign in</a></li>
                {{/if}}
            </ul>
        </div>
    </div>
</header>

{{#each ticket}}
    <div class="cont-ticket">
        <p class="ticket1">{{id}}</p>
        <p class="ticket3">{{place_event}}</p>
        <p class="ticket2">{{name_event}}</p>
        <p class="ticket3">{{date_event}}</p>
        <p class="ticket3">{{full_name}}</p>
        <p class="ticket4">c.c. {{id_card}}</p>
    </div>
{{/each}}

