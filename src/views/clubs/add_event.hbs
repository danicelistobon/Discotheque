<header>
    <div class="logoc">
        <a href="/clubs" style="display: block; height: 100%"></a>
    </div>
    <h1>Discotheque</h1>
    <div class="profile">
        <a href=# style="display: block; height: 80px; width: 80px"></a>
        <div class="popover">
            <ul>
                {{#if user}}
                <li><a href="/user">Your profile</a></li>
                <li class="borde"><a href="/clubs/add">Create a club</a></li>
                <li><a href="/signout">Sign out</a></li>
                {{else}}
                <li><a href="/signin">Sign in</a></li>
                {{/if}}
            </ul>
        </div>
    </div>
</header>
        
<div class="cont-add-club">
    <form action="/clubs/add/event" method="POST">
        <div class="form">
            <h1>New Event</h1>
            <div class="grupo">
                <input type="text" name="name" required><span class="barra"></span>
                <label for="">Name of event</label>
            </div>
            <p class="text_form">Place of event</p>
            <div class="grupo">
                <input type="text" name="place" placeholder="Name of club" required><span class="barra"></span>
            </div>
            <p class="text_form">Date event</p>
            <div class="grupo">
                <input type="text" name="date_event" placeholder="Month day, year" required><span class="barra"></span>
            </div>
            <p class="text_form">Cover</p>
            <div class="grupo">
                <input type="text" name="cover" placeholder="10.000" required><span class="barra"></span>
            </div>
            <div class="grupo">
                <textarea name="description" rows="5" required></textarea><span class="barra"></span>
                <label for="">Description</label>
            </div>
            <button>Save</button>
        </div>
    </form>
</div>
        
